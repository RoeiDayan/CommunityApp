<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityApp.Views.ProfilePageView"
             Title="ProfilePageView">
    <VerticalStackLayout>
        <Label Text="Name:" FontFamily="Font1"></Label>
        <Label Text="{Binding MemberName}" FontFamily="Font1"></Label>

        <Label Text="Role: " FontFamily="Font1"></Label>
        <Label Text="{Binding MemberRole}" FontFamily="Font1"></Label>
        <Label Text="Balance: " FontFamily="Font1"></Label>
        <Label Text="{Binding Balance}" FontFamily="Font1"></Label>

        <Label Text="Unit Number" FontFamily="Font1"></Label>
        <Label Text="{Binding UnitNum}" FontFamily="Font1"></Label>

        <Label Text="Liability" FontFamily="Font1"></Label>
        <Label Text="{Binding IsLiable}" FontFamily="Font1"></Label>

        <Label Text="Residency" FontFamily="Font1"></Label>
        <Label Text="{Binding IsResident}" FontFamily="Font1"></Label>

        <Label Text="Managment" FontFamily="Font1"></Label>
        <Label Text="{Binding IsManager}" FontFamily="Font1"></Label>
        
    </VerticalStackLayout>
</ContentPage>