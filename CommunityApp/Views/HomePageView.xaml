<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityApp.Views.HomePageView"
             Title="HomePageView"
             BackgroundColor="#F0F4F8">

    <Grid RowDefinitions="Auto,*,Auto,*,Auto,Auto" Padding="20">

        <!-- Error Message Label -->
        <Label Grid.Row="0" 
               Text="{Binding ErrorMessage}" 
               TextColor="Red" 
               FontAttributes="Bold"
               FontSize="16"
               IsVisible="{Binding ErrorMessage}" 
               HorizontalOptions="Center"
               Padding="5"/>

        <!-- Header for Notices -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               CornerRadius="10"
               Padding="10"
               HasShadow="True">
            <Label Text="Notices" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="#333"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Notices Grid -->
        <CollectionView Grid.Row="2" ItemsSource="{Binding Notices}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="2" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" 
                           BackgroundColor="#E3F2FD" 
                           CornerRadius="10" 
                           Margin="10"
                           HasShadow="True">
                        <Label Text="{Binding Title}" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#1565C0"
                               HorizontalOptions="Center"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Header for Reports -->
        <Frame Grid.Row="3"
               BackgroundColor="White"
               CornerRadius="10"
               Padding="10"
               HasShadow="True">
            <Label Text="Reports" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="#333"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Reports Grid -->
        <CollectionView Grid.Row="4" ItemsSource="{Binding Reports}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="2" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" 
                           BackgroundColor="#ECEFF1" 
                           CornerRadius="10" 
                           Margin="10"
                           HasShadow="True">
                        <Label Text="{Binding Text}" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#37474F"
                               HorizontalOptions="Center"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Refresh Button -->
        <Button Grid.Row="5"
                Text="Refresh Data"
                Command="{Binding FetchBothCommand}"
                BackgroundColor="#1976D2"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                Padding="12"
                Margin="10"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

    </Grid>
</ContentPage>
