<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityApp.Views.HomePageView"
             Title="HomePageView">

    <Grid RowDefinitions="Auto,*,Auto,*,Auto" Padding="10">

        <!-- Error Message Label -->
        <Label Grid.Row="0" 
               Text="{Binding ErrorMessage}" 
               TextColor="Red" 
               IsVisible="{Binding ErrorMessage}" 
               HorizontalOptions="Center"/>

        <!-- Header for Notices -->
        <Label Grid.Row="1" 
               Text="Notices" 
               FontSize="Large" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />

        <!-- Notices Grid -->
        <CollectionView Grid.Row="2" ItemsSource="{Binding Notices}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="5" Orientation="Horizontal" />
                <!-- Set orientation to Horizontal -->
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" BackgroundColor="LightBlue" CornerRadius="10" Margin="5">
                        <Label Text="{Binding Title}" FontSize="Medium" HorizontalOptions="Center" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Header for Reports -->
        <Label Grid.Row="3" 
               Text="Reports" 
               FontSize="Large" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />

        <!-- Reports Grid -->
        <CollectionView Grid.Row="4" ItemsSource="{Binding Reports}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="5" Orientation="Horizontal" />
                <!-- Set orientation to Horizontal -->
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" BackgroundColor="LightGray" CornerRadius="10" Margin="5">
                        <Label Text="{Binding Description}" FontSize="Medium" HorizontalOptions="Center" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Refresh Button -->
        <Button Grid.Row="5"
                Text="Refresh Data"
                Command="{Binding RefreshCommand}"
                HorizontalOptions="Center" 
                VerticalOptions="Center" />

    </Grid>
</ContentPage>
