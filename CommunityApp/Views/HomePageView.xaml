<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityApp.Views.HomePageView"
             Title="HomePageView">
    <Grid RowDefinitions="Auto,*,*,Auto" Padding="10">

        <!-- Notifies Error Message -->
        <Label Grid.Row="0"
               Text="{Binding ErrorMessage}" 
               TextColor="Red" 
               IsVisible="{Binding ErrorMessage}" 
               HorizontalOptions="Center"/>

        <!-- Refresh Button -->
        <Button Grid.Row="1"
                Text="Refresh Data"
                Command="{Binding RefreshCommand}"
                HorizontalOptions="Center" 
                VerticalOptions="Center" />

        <!-- Notices -->
        <ScrollView Grid.Row="2" Orientation="Horizontal">
            <HorizontalStackLayout Spacing="10" Padding="5">
                <BindableLayout.ItemsSource>
                    <x:StaticExtension Member="{Binding Notices}" />
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" BackgroundColor="LightBlue" CornerRadius="10" WidthRequest="150">
                            <Label Text="{Binding Title}" FontSize="Medium" HorizontalOptions="Center" />
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Reports -->
        <CollectionView Grid.Row="3" ItemsSource="{Binding Reports}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="3" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" BackgroundColor="LightGray" CornerRadius="10" Margin="5">
                        <Label Text="{Binding Description}" FontSize="Medium" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
