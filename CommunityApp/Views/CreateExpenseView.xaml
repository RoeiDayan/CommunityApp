<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:CommunityApp.Converters"
             x:Class="CommunityApp.Views.CreateExpenseView"
             Title="Create Expense">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#2193b0" Offset="0.0" />
            <GradientStop Color="#6dd5ed" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <!-- Header -->
            <Label Text="Create a New Expense"
                   FontSize="26"
                   FontFamily="Font1"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />

            <Label Text="Fill in the details below to add an expense."
                   FontSize="16"
                   FontFamily="Font1"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10" />

            <!-- Title Entry -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="10"
                   HasShadow="True">
                <Entry Placeholder="Expense Title"
                       Text="{Binding Title}"
                       FontSize="18"
                       FontFamily="Font1"
                       TextColor="#37474F"
                       HeightRequest="50"/>
            </Frame>

            <!-- Description Editor -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="10"
                   HasShadow="True">
                <Editor Placeholder="Expense Description"
                        Text="{Binding Description}"
                        FontSize="18"
                        FontFamily="Font1"
                        TextColor="#37474F"
                        AutoSize="TextChanges"
                        HeightRequest="150"/>
            </Frame>

            <!-- Amount Entry -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="10"
                   HasShadow="True">
                <Entry Placeholder="Amount"
                       Text="{Binding Amount}"
                       Keyboard="Numeric"
                       FontSize="18"
                       FontFamily="Font1"
                       TextColor="#37474F"
                       HeightRequest="50"/>
            </Frame>

            <!-- Date Picker -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="10"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Expense Date"
                           FontSize="14"
                           FontFamily="Font1"
                           TextColor="#37474F"/>
                    <DatePicker Date="{Binding ExpenseDate}"
                                Format="dd/MM/yyyy" />
                </VerticalStackLayout>
            </Frame>

            <!-- Create Button -->
            <Button Text="ðŸ’¸ Create Expense"
                    Command="{Binding CreateExpenseCommand}"
                    IsEnabled="{Binding InServerCall, Converter={StaticResource InverseBooleanConverter}}"
                    BackgroundColor="#FF4081"
                    TextColor="White"
                    FontSize="18"
                    FontFamily="Font1"
                    CornerRadius="25"
                    Padding="12"
                    Margin="10"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand" />

            <!-- Loading Spinner -->
            <ActivityIndicator IsRunning="{Binding InServerCall}"
                               IsVisible="{Binding InServerCall}"
                               Color="White"
                               WidthRequest="40"
                               HeightRequest="40"
                               HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
