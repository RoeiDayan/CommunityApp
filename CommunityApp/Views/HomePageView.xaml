<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityApp.Views.HomePageView"
             Title="Home Page">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#2193b0" Offset="0.0" />
            <GradientStop Color="#6dd5ed" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto, *">
        <!-- Main Content -->
        <VerticalStackLayout Padding="20" Spacing="15">

            <Frame BackgroundColor="#E3F2FD" CornerRadius="10" Margin="5,10" Padding="15" HasShadow="True">
                <StackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="{Binding CurrentComName}"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#D32F2F"
                           HorizontalTextAlignment="Center"
                           FontFamily="Font1"/>

                    <Label Text="{Binding CurrentComPhone}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#37474F"
                           HorizontalTextAlignment="Center"
                           FontFamily="Font1">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CopyPhoneCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Frame>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   FontAttributes="Bold"
                   FontSize="16"
                   IsVisible="{Binding HasErrorMessage}"
                   HorizontalOptions="Center"
                   Padding="5"
                   FontFamily="Font1"/>

            <Label Text="Notices"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   FontFamily="Font1"
                   Margin="0,0,0,10"/>

            <ListView ItemsSource="{Binding Notices}"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      BackgroundColor="Transparent"
                      HeightRequest="300">
                <!-- ✅ Set HeightRequest -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="#E3F2FD"
                                   CornerRadius="10"
                                   Margin="5,10"
                                   Padding="15"
                                   HasShadow="True">
                                <StackLayout Spacing="10">
                                    <Label Text="{Binding Title}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="#D32F2F"
                                           HorizontalTextAlignment="Center"
                                           FontFamily="Font1"/>
                                    <Label Text="{Binding Text}"
                                           FontSize="16"
                                           TextColor="#37474F"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"
                                           FontFamily="Font1"
                                           LineBreakMode="WordWrap"/>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="Reports"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   FontFamily="Font1"
                   Margin="0,10"/>

            <ListView ItemsSource="{Binding Reports}"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      BackgroundColor="Transparent"
                      HeightRequest="300">
                <!-- ✅ Set HeightRequest -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="#ECEFF1"
                                   CornerRadius="10"
                                   Margin="5,10"
                                   Padding="15"
                                   HasShadow="True">
                                <StackLayout Spacing="10">
                                    <Label Text="{Binding Title}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="#37474F"
                                           HorizontalTextAlignment="Center"
                                           FontFamily="Font1"/>
                                    <Label Text="{Binding ReportDesc}"
                                           FontSize="16"
                                           TextColor="#37474F"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"
                                           FontFamily="Font1"
                                           LineBreakMode="WordWrap"/>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Refresh Data"
                    Command="{Binding FetchBothCommand}"
                    BackgroundColor="#FF4081"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="25"
                    Padding="12"
                    Margin="10"
                    HorizontalOptions="Center"
                    FontFamily="Font1"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
