<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityApp.Views.ProfilePageView"
             Title="ProfilePageView">
    <VerticalStackLayout>
        <Label Text="Name:"></Label>
        <Label Text="{Binding MemberName}"></Label>

        <Label Text="Role: "></Label>
        <Label Text="{Binding MemberRole}"></Label>
        <Label Text="Balance: "></Label>
        <Label Text="{Binding Balance}"></Label>

        <Label Text="Unit Number"></Label>
        <Label Text="{Binding UnitNum}"></Label>

        <Label Text="Liability"></Label>
        <Label Text="{Binding IsLiable}"></Label>

        <Label Text="Residency"></Label>
        <Label Text="{Binding IsResident}"></Label>

        <Label Text="Managment"></Label>
        <Label Text="{Binding IsManager}"></Label>
        
    </VerticalStackLayout>
</ContentPage>