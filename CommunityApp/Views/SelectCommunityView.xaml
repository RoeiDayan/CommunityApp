<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityApp.Views.SelectCommunityView"
             Title="SelectCommunityView">

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#2193b0" Offset="0.0" />
            <GradientStop Color="#6dd5ed" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Scrollable Layout -->
    <ScrollView>
        <VerticalStackLayout IsEnabled="{Binding NotInServerCall}" Padding="20" Spacing="15">

            <!-- Title -->
            <Label Text="Choose the community you wish to log into"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Padding="5"
                   FontFamily="Font1"
                   Margin="0, 30"/>

            <!-- Community Selection -->
            <CollectionView ItemsSource="{Binding Communities}" x:Name="cv">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="20"
                               Padding="20"
                               Margin="10"
                               BackgroundColor="White"
                               BorderColor="#B3E5FC"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="15" HorizontalOptions="Center">

                                <!-- Community Picture (optional) -->
                                <Image Source="{Binding Picture}" 
                                       HeightRequest="50" 
                                       WidthRequest="130" 
                                       Aspect="AspectFill"
                                       HorizontalOptions="Center"
                                       Margin="5" />

                                <!-- Community Name -->
                                <Label Text="{Binding ComName}" 
                                       FontSize="22" 
                                       FontAttributes="Bold" 
                                       TextColor="#1E88E5"
                                       HorizontalOptions="Center"
                                       FontFamily="Font1"
                                       Margin="0, 10"/>

                                <!-- Community Description -->
                                <Label Text="{Binding Body}" 
                                       FontSize="16" 
                                       TextColor="#555"
                                       HorizontalTextAlignment="Center"
                                       Margin="10"
                                       FontFamily="Font1"/>

                                <!-- Sign-In Button with Fixed Size -->
                                <Grid Padding="0, 10" HorizontalOptions="Fill" VerticalOptions="End">
                                    <Button Text="Sign In" 
                                            Command="{Binding Source={x:Reference cv}, Path=BindingContext.SignInCommand}"
                                            CommandParameter="{Binding ComId}"
                                            BackgroundColor="#FF4081"
                                            TextColor="White"
                                            FontSize="16"
                                            CornerRadius="25"
                                            HeightRequest="50"
                                            WidthRequest="200"  
                                            Padding="12"
                                            HorizontalOptions="FillAndExpand"
                                            FontFamily="Font1"/>
                                </Grid>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
